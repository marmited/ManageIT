
@{
    ViewData["Title"] = "Login";
}
@model ManageIt.Web.Models.ViewModels.User.RegisterViewModel

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<h2>Sign in</h2>

@using (Html.BeginForm("Register", "Auth", null, FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        <small id="emailHelp" class="form-text text-muted">Enter email address.</small>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName)
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control"})
        <small id="firstNameHelp" class="form-text text-muted">Enter your first name.</small>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LastName)
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control"})
        <small id="lastNameHelp" class="form-text text-muted">Enter your last name.</small>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password)
        @Html.TextBoxFor(model => model.Password, new { @class = "form-control"})
        <small id="passwordHelp" class="form-text text-muted">Enter your password.</small>
    </div>
    <div class="form-check">
        @Html.LabelFor(model => model.RepeatedPassword)
        @Html.TextBoxFor(model => model.RepeatedPassword, new { @class = "form-control"})
        <small id="confirmPasswordHelp" class="form-text text-muted">Confirm your password.</small>
    </div>
    <button type="submit" class="btn btn-primary">Sign in!</button>
}

